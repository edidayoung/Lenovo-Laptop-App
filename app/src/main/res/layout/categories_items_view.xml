<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/categories_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/colorText"
        android:layout_margin="8dp"
        app:cardCornerRadius="20dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/categories_image_view"/>

        <TextView
            android:id="@+id/textView_categories_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/categories_image_view"
            android:text="Students Laptop"
            android:textAlignment="center"
            android:textColor="@color/colorBackground"
            android:textSize="24dp"
            android:textStyle="bold" />




    </androidx.cardview.widget.CardView>

</RelativeLayout>